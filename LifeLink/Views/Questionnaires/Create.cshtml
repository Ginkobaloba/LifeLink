                    <p>Do you weigh at least 110 pounds?</p>
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Weight6)
                        @Html.ValidationMessageFor(model => model.Weight6, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RiskySex7, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <p>Have you engaged in risky sexual behavior in the past 12 months?</p>
                    <div class="checkbox">
                        @Html.EditorFor(model => model.RiskySex7)
                        @Html.ValidationMessageFor(model => model.RiskySex7, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

