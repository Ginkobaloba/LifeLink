@model LifeLink.Models.Questionnaire

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Questionnaire</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.GeneralHealth1, "1.", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <p>Are you in general good health?</p>
                <div class="checkbox">
                    @Html.EditorFor(model => model.GeneralHealth1)
                    @Html.ValidationMessageFor(model => model.GeneralHealth1, "Yes", new { @class = "text-info", @checked = true })
                </div>
                <div class="checkbox">
                        @Html.EditorFor(model => model.GeneralHealth1)
                        @Html.ValidationMessageFor(model => model.GeneralHealth1, "No", new { @class = "text-info", @checked = false })
                </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DonationHistory2, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <p>In the past 8 weeks, have you donated blood platlets or plasma?</p>
                    <div class="checkbox">
                        @Html.EditorFor(model => model.DonationHistory2)
                        @Html.ValidationMessageFor(model => model.DonationHistory2, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.VaxOrShots3, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <p>In the past 8 weeks, have you had any vaccinations or shots?</p>
                    <div class="checkbox">
                        @Html.EditorFor(model => model.VaxOrShots3)
                        @Html.ValidationMessageFor(model => model.VaxOrShots3, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Pregnant4, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <p>Are you, or do you suspect you may be pregnant?</p>
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Pregnant4)
                        @Html.ValidationMessageFor(model => model.Pregnant4, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Medications5, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <p>Have you taken any of the medications on this list in the past  weeks?</p>
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Medications5)
